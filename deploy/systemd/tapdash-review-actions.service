[Unit]
Description=TapDash Review Actions API
After=network.target

[Service]
Type=simple
User=tapdash
Group=tapdash
WorkingDirectory=/opt/tapdash-swarm
EnvironmentFile=/etc/tapdash/swarm.env
ExecStart=/usr/bin/python3 /opt/tapdash-swarm/review_actions_service.py
Restart=always
RestartSec=5
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
