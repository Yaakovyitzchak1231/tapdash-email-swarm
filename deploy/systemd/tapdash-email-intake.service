[Unit]
Description=TapDash Email Intake Service
After=network.target

[Service]
Type=simple
User=tapdash
Group=tapdash
WorkingDirectory=/opt/tapdash-swarm
EnvironmentFile=/etc/tapdash/swarm.env
ExecStart=/usr/bin/python3 /opt/tapdash-swarm/email_work_order_service.py
Restart=always
RestartSec=5
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
